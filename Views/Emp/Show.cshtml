@model List<MvcPractice.Models.Student>
@{
    ViewBag.Title = "Show";
}

<h2>Show</h2>

<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Age</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@Html.ActionLink("DeleteButton","Delete",new {id=item.Id })</td>
            <td>@Html.ActionLink("Edit","Add",new {id=item.Id })</td>

        </tr>
    }
</table>